@require '~@/styles'

.card
  margin-bottom: qu(4)

  button:not(:last-child)
    margin-bottom: qu(2)

.form-item
  margin-bottom: qu(2)
  &:last-child
    margin-bottom: 0

.export
  &-textarea
    margin-top: qu(7)
  
  &-icon
    display: inline-block
    margin-right: qu(4)

.clearfix:after
    content: ' '
    height: 0
    display: block
    clear: both

.bmc-button
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  padding: 4px 9px
  height: 39px
  line-height: 40px
  text-decoration: none
  display: inline-flex
  color: #000000
  background-color: #ffffff
  border-radius: 3px
  border: 1px solid transparent
  font-size: 14px
  letter-spacing: 0.6px
  box-shadow: 0 1px 2px rgba(190, 190, 190, 0.5)
  box-sizing: border-box
  transition: 0.3s all linear

  &:hover
  &:active
  &:focus
    box-shadow: 0px 1px 2px 2px rgba(190, 190, 190, 0.5)
    text-decoration: none
    opacity 0.85
    color: #000000

  img
    width: 27px
    margin-bottom: 1px
    vertical-align: middle
