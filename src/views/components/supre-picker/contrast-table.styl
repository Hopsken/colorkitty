.contrast
  width: 100%
  text-align: center
  border-collapse: collapse

  td:first-child
    text-align: left

  th, td
    width: 33.3%
    padding: 5px
    border: 1px solid rgba(216, 216, 216, 0.4)

  &-swatch
    margin: 8px auto
    // min-width: 45px
    max-width: 60px
    padding: 5px
    background: #fff
    cursor: pointer
    border-radius: 1px
    box-shadow: 0 0 0 1px alpha(#000, 0.1)

    div
      width: 100%
      height: 14px
      border-radius: 2px
      box-shadow: 0 0 0 1px alpha(#000, 0.1)
