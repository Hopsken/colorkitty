@require '~@/styles'

.palette
  width: 30rem
  border-radius: 4px
  box-shadow: 0 10px 40px 0 rgba(62,57,107,0.2), 0 2px 9px 0 rgba(62,57,107,0.2)
  background: #fff

.palette-colors
  display: flex
  flex-direction: row
  flex-wrap: nowrap

  margin: 0
  padding: 0
  width: 100%
  height: 18.5rem

  transition: all .2s timing-function(.8, .0, .2, 1)

.active
  transform: scale(1.02)
  border-radius: 2px
  z-index: 100
  transform: transform .3s ease

.c
  position: relative
  flex: 1 0 auto
  text-align: center

  &:first-of-type
    border-radius: 4px 0 0 0
  &:last-of-type
    border-radius: 0 4px 0 0

  &:hover span
    opacity: 1

  span
    position: absolute
    left: 0
    right: 0
    bottom: 0

    display: inline-block
    padding: qu(1) qu(1)

    opacity: 0
    line-height: 1.2rem
    font-size: 1.1rem
    text-transform: uppercase
    color: $G30
    background-color: rgba(0, 0, 0, .1)
    transition: all .2s timing-function(.8, .0, .2, 1)

.palette
  position: relative

  &-info
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    justify-content: space-between
    align-items: center

    height: 5.625rem
    padding: 0 2rem

  &-name
    outline: 0
    border: 0
    color: $DarkShade

    &:focus
      border-bottom: 1px solid $Main

  &-control
    button
      margin-left: 1.2rem

  &-settings
    text-align: center

  &-slider
    position: relative
    padding: 0 2rem
    width: 12.5rem
    margin-bottom: 2rem

    &-title
      font-weight: 500
      font-size: 1.14rem

    &-tip
      position: absolute
      font-weight: 500
      top: -5px
      width: 1rem
      height: 1rem

      &:first-child
        left: 0
      &:last-child
        right: 0
