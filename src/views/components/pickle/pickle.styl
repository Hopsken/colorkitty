.pickle
  position: absolute
  cursor: move

.circle
  position: absolute
  top: 0
  display: inline-block
  box-sizing: border-box

  border: 4px solid rgba(68, 60, 70, .4)
  box-shadow: 0 2px 9px 0 rgba(62,57,107,0.8)
  border-radius: 50%


.triangle
  position: absolute
  height: 0
  width: 0
  border-style: solid
  border-color: transparent
  border-top-color: rgba(68, 60, 70, .4)
  border-radius: 50%



