.pickle
  position: absolute
  cursor: move

.circle
  position: absolute
  top: 0
  display: inline-block
  box-sizing: border-box

  border: 4px solid #fff
  box-shadow: rgba(0,0,0,.05) 0 0 0 2px
  border-radius: 50%


.triangle
  position: absolute
  height: 0
  width: 0
  border-style: solid
  border-color: transparent
  border-top-color: rgba(201, 201, 201, .4)
  border-radius: 50%



