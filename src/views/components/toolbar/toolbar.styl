@require '~@/styles'

.toolbar
  display: flex
  flex-direction: column
  background: #f9fafb
  border: 1px solid rgba(62,57,107,0.2)
  border-radius: qu(1)

.item
  font-size: 18px
  color: $G90
  padding: qu(3) qu(4)

  &:not(:last-child)
    border-bottom: 1px solid rgba(62,57,107,0.2)

.export
  &-textarea
    margin-top: qu(7)

  &-icon
    display: inline-block
    margin-right: qu(4)
